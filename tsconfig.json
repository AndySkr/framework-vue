{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "target": "esnext",
        "allowJs": true,
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "preserve",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "extendedDiagnostics": true,
        "jsxFactory": "h",
        "allowSyntheticDefaultImports": true // 允许从没有设置默认导出的模块中默认导入
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/vue.d.ts"],
    "exclude": ["node_modules"]
}
